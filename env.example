# ========================================
# RAG Service 환경 설정 예시
# ========================================

# MongoDB Atlas 연결 설정 (필수)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB=insurance
MONGO_COLL=documents
MONGO_VECTOR_INDEX=vector_index
MONGO_TEXT_INDEX=text_index

# Azure OpenAI 설정 (필수)
AZURE_OPENAI_API_KEY=your_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4.1-mini
AZURE_OPENAI_EMB_DEPLOYMENT=text-embedding-3-small

# 검색 성능 튜닝
SEARCH_TOP_K=6
VECTOR_CANDIDATES=800
TEXT_SEARCH_LIMIT=20
RRF_K_VALUE=60

# LLM 설정
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000
ENABLE_JUDGE=true

# 캐싱 설정
CACHE_SIZE=128
CACHE_TTL=3600

# 로깅 설정
LOG_LEVEL=INFO
ENABLE_SEARCH_LOGS=true
ENABLE_GENERATION_LOGS=false
LOG_FORMAT=json

# 서버 설정
HOST=0.0.0.0
PORT=8002
WORKERS=1

# 보안 설정
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
MAX_INPUT_LENGTH=1000

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PORT=9090
